<?xml version = "1.0" encoding = "utf-8"?>
<s:VGroup xmlns:fx = "http://ns.adobe.com/mxml/2009"
		  xmlns:s = "library://ns.adobe.com/flex/spark"
		  xmlns:mx = "library://ns.adobe.com/flex/mx"
		  xmlns:serviceFeedback = "common.components.serviceFeedback.*"
		  width = "100%"
		  height = "100%">
	<fx:Script>
		<![CDATA[
			import assets.images.ImageUtil;
			
			import common.components.serviceFeedback.skins.LoadingWithBGTextSkin;
			
			import gfp.event.TransacaoEvent;
			import gfp.service.LancamentoService;
			
			[Dispatcher]
			public var dispatcher:IEventDispatcher;
			
			[Inject]
			[Bindable]
			public var service:LancamentoService;
			
			[EventHandler(event="AppEvent.ATUALIZAR_DASHBOARD")]
			public function atualizar():void
			{
				dispatcher.dispatchEvent(new TransacaoEvent(TransacaoEvent.LISTAR_SALDO_POR_CONTA
															, null));
			}
		]]>
	</fx:Script>

	<s:HGroup verticalAlign = "bottom">
		<s:Image source = "{ImageUtil.COINS}"/>

		<s:VGroup gap = "0">
			<s:Label text = "Saldo das Contas"
					 fontFamily = "Title"
					 fontSize = "14"
					 color = "#014C6B"/>

			<s:Label fontSize = "10"/>
		</s:VGroup>
	</s:HGroup>

	<s:Group width = "100%"
			 height = "100%">
		<mx:DataGrid dataProvider = "{service.listaSaldoAtual}"
					 width = "100%"
					 height = "100%"
					 showHeaders = "false"
					 selectable = "false"
					 alternatingItemColors = "[#F6F9F6, #F6F9F6]">
			<mx:columns>
				<mx:DataGridColumn itemRenderer = "gfp.view.saldoPorConta.SaldoPorContaRenderer"
								   width = "500"/>
			</mx:columns>
		</mx:DataGrid>

		<serviceFeedback:ServiceFeedback watchForCall = "listarSaldoPorConta"
										 skinClass = "common.components.serviceFeedback.skins.LoadingWithBGTextSkin"
										 width = "100%"
										 height = "100%"/>
	</s:Group>
</s:VGroup>
