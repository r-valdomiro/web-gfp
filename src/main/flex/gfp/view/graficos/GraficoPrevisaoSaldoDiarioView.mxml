			<components:FCChartData ChartNoDataText = "Não há lançamentos neste período."/>
		</components:FusionCharts>

		<mx:Canvas width = "{grafico.width}"
				   height = "18"
				   backgroundColor = "#eef4fb"
				   x = "{grafico.x}"
				   y = "{grafico.y}"/>
	</s:Group>

