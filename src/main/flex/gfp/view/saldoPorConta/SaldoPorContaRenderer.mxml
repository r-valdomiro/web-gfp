<?xml version = "1.0" encoding = "utf-8"?>
<s:MXDataGridItemRenderer xmlns:fx = "http://ns.adobe.com/mxml/2009"
						  xmlns:s = "library://ns.adobe.com/flex/spark"
						  xmlns:mx = "library://ns.adobe.com/flex/mx">
	<fx:Script>
		<![CDATA[
			import common.util.NumberUtil;
			import common.util.StringUtil;
		]]>
	</fx:Script>

	<s:BorderContainer width = "100%"
					   height = "25"
					   backgroundColor = "#F9F9F9"
					   borderVisible = "false">
		<s:HGroup width = "100%"
				  paddingLeft = "5"
				  paddingRight = "5"
				  paddingTop = "5"
				  paddingBottom = "5"
				  verticalAlign = "middle">
			<s:Label text = "{data.conta}"
					 fontSize = "10"
					 width = "100%"/>

			<s:Label text = "{StringUtil.decode(data.situacao)}"
					 fontSize = "10"
					 width = "70"
					 textAlign = "right"/>

			<s:Label text = "{NumberUtil.formatNumber(data.saldo, 2)}"
					 fontSize = "11"
					 width = "60"
					 textAlign = "right"/>
		</s:HGroup>
	</s:BorderContainer>
</s:MXDataGridItemRenderer>
